<%-include('includes/header')-%>

<body>
    <section style="margin-top: 150px;">
        <a href="/admin/add">Yeni Ürün Ekle</a>
        <h1>Ürünler</h1>
        <ul>
            <% products.forEach(product => { %>
                <li>
                    <p><%=product.title%></p>
                    <a href="" class="delete" data-doc="<%=product._id%>">Ürünü Sil</a>
                </li>
            <% }) %>
        </ul>
    </section>

    <script>
        const del = document.querySelectorAll('a.delete')
        const delLinks = [].slice.call(del)

        delLinks.forEach((item, i) => {
            item.addEventListener('click', (e) => {
                const endpoint = `/admin/delete/${item.dataset.doc}`
                fetch(endpoint, {
                    method: 'DELETE'
                }).then((response) => response.json())
                .then((data) => window.location.href = data.link)
                .catch((err) => {
                    console.log(err)
                })
            })
        })
    </script>
</body>

<%-include('includes/footer')-%>